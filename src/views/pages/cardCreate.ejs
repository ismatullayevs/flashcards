<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <a href="/" class="navbar-brand">Flashcards</a>
      </div>
    </nav>

    <div class="header container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item">
            <a href="/decks/<%= deck.id %>/cards"><%= deck.name %></a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <% if (card) { %>
             Edit a card
            <% } else { %>
              Add a card
            <% } %>
          </li>
        </ol>
      </nav>
    </div>

    <form action="<% if (card) { %>/cards/<%= card.id %>/edit<% } else { %>/decks/<%= deck.id %>/cards<% } %>" method="post" class="container mt-3">
      <% if (card) { %>
       <input type="hidden" name="deck_id" value="<%= card.deck_id %>">
      <% } %>
      <div class="mb-3">
        <label for="question" class="form-label">Question</label>
        <textarea name="question" id="question" class="form-control" required><% if (card) { %><%= card.question %><% } %></textarea>
      </div>
      <div class="mb-4">
        <label for="answer" class="form-label">Answer</label>
        <textarea name="answer" id="answer" class="form-control" required><% if (card) { %><%= card.answer %><% } %></textarea>
      </div>
      <a href="javascript:history.back()" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary"><% if (card) { %>
       Save
      <% } else { %>
        Create
      <% } %></button>
    </form>

    <%- include('../partials/scripts') %>
  </body>
</html>
